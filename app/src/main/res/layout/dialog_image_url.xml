<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="@dimen/margin_large">

    <TextView
        android:id="@+id/dialog_image_url_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/image_url_input_header"
        android:textAlignment="center"
        android:textColor="@color/lime"
        android:textSize="@dimen/text_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog_image_url_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/bg_input"
        android:hint="@string/image_url_input"
        android:importantForAutofill="no"
        android:padding="@dimen/margin_small"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textColorHint="@color/yellow"
        android:textSize="@dimen/text_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_image_url_header"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/dialog_image_url_button_negative"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_small"
        android:background="@drawable/bg_button"
        android:minWidth="@dimen/button_width"
        android:paddingHorizontal="@dimen/margin_regular"
        android:soundEffectsEnabled="false"
        android:text="@string/cancel"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/yellow"
        android:textSize="@dimen/text_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dialog_image_url_button_positive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_image_url_input" />

    <Button
        android:id="@+id/dialog_image_url_button_positive"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_small"
        android:background="@drawable/bg_button"
        android:minWidth="@dimen/button_width"
        android:paddingHorizontal="@dimen/margin_regular"
        android:soundEffectsEnabled="false"
        android:text="@string/ok"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/yellow"
        android:textSize="@dimen/text_regular"
        app:layout_constraintBottom_toBottomOf="@id/dialog_image_url_button_negative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_image_url_button_negative"
        app:layout_constraintTop_toTopOf="@id/dialog_image_url_button_negative" />

</androidx.constraintlayout.widget.ConstraintLayout>
